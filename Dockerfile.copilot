FROM node:24-slim

ENV TERM=xterm-256color
ENV COLORTERM=truecolor

# Install GitHub Copilot CLI (latest version should work on slim)
RUN npm install -g @github/copilot

WORKDIR /project

# Install system dependencies
# Added 'sudo' to the list
RUN apt-get update && apt-get install -y \
    git \
    make \
    curl \
    unzip \
    ca-certificates \
    wget \
    jq \
    ripgrep \
    procps \
    fzf \
    htop \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Install Go
COPY --from=golang:latest /usr/local/go /usr/local/go
ENV PATH=$PATH:/usr/local/go/bin:/root/go/bin

# Configure sudo for 'node' user
# 1. Ensure node user owns its home (just in case)
# 2. Allow node user to use sudo without password
RUN chown -R node:node /home/node && \
    echo "node ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/node && \
    chmod 0440 /etc/sudoers.d/node

ENTRYPOINT ["copilot"]